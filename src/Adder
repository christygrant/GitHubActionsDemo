public class Adder {
    
    public int add(int a, int b) {
        return a + b;
    }

    // Main method for basic testing
    public static void main(String[] args) {
    
        Adder adder = new Adder();
        int result = adder.add(5, 7);
        System.out.println("The sum is: " + result);
    }
}
